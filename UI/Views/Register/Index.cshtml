@model Entity.Concrete.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"> </script>
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using (Html.BeginForm("Index","Register", FormMethod.Post)){
					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Adınız Soyadınız</label>
							@Html.TextBoxFor(x=>x.WriterName,new{@class="form-control"})
							@Html.ValidationMessageFor(x=>x.WriterName,"",new{@class="text-danger"})
							@*<input type="text" name="WriterName" class="form-control" id="validationDefault01" placeholder="Adınızı Soyadınızı giriniz..." required="">*@
						</div>
						<div class="col-md-6 mb-3"> 
							<label for="validationCustom02">Mail Adresi</label>
							@Html.TextBoxFor(x=>x.WriterMail,new{@class="form-control"})
							@Html.ValidationMessageFor(x=>x.WriterMail,"",new{@class="text-danger"})
							@*<input type="email" name="WriterMail" class="form-control" id="validationDefault02" placeholder="E-Posta giriniz..." required="">*@
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							@Html.TextBoxFor(x=>x.WriterPassword,new{@class="form-control",@type="password"})
							@Html.ValidationMessageFor(x=>x.WriterPassword,"",new{@class="text-danger"})
							@*<input type="password" name="WriterPassword" class="form-control" id="password1" placeholder="Şifreyi giriniz..." required="">*@
						</div>
						<div class="form-group col-md-6">
							<label for="exampleInputPassword2 mb-2">Dosya Yolu</label>
							@Html.TextBoxFor(x=>x.WriterImage,new{@class="form-control"})
							@Html.ValidationMessageFor(x=>x.WriterImage,"",new{@class="text-danger"})
@*							<input type="text" name="WriterImage" class="form-control" id="text2" placeholder="Dosya yolunu giriniz..." required="">
*@						</div>

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p>
						<input type="checkbox" class="form-check-input" id="check" required/>
						<a href="#" id="check">Okudum, kabul ediyorum.</a>
					</p>
				}

			</div>
		</div>
	</div>
</section>
<script>
	
	$('#check').click(function(){
		swal("Bu kısmı işaretlemeden geçemezsiniz.");
	})
</script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@*İnput silip yerine Html.TextboxFor eklediğimiz için formun stilinde bozulmalar oldu.
Proje Boostrap ile yapıldığı için class eklememiz eksi görünümüne kavuşmasına yardımcı
olacaktır. Ayrıca verilen mesajların stilini de değiştirebiliriz. Bunları hep 
ikini parametreyi new leyerek yapabiliriz. Aynı zamanda password textbox ı için de
bir type eklememiz gerekecektir. 
*@